{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://localhost/schema/01/uses.json",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "enum": [
          "edible",
          "medicinal",
          "material"
        ]
      },
      "parts": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "not_parts": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "advice": {
        "type": "object",
        "properties": {},
        "patternProperties": {
          "^([a-z]{2})([_-]{1}[A-Z]{2})?$": {
            "type": "string"
          }
        }
      },
      "refs_map": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": [
      "type",
      "parts",
      "not_parts",
      "tags",
      "advice",
      "refs"
    ]
  }
}
